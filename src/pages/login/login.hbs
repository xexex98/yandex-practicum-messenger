<div class="login">
  <h3>Вход</h3>
  <form
    action="#"
    class="login-form"
  >
    <div>
      {{> Input label='Логин' name="login" error="Неверный логин" required=true}}
      {{> Input label='Пароль' name='password' type="password" error="Неверный пароль"
      placeholder=''}}
    </div>
    <div>
      {{> Button text='Авторизоваться'}}
      <a
        href="#"
        class="login-link"
        >Нет аккаунта?</a
      >
    </div>
  </form>
</div>
