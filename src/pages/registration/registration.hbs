<main class="registration">
  <h3>Регистрация</h3>
  <form
    action="#"
    class="registration-form"
  >
    <div>
      {{> Input label='Почта' name="email"}}
      {{> Input label='Логин' name='login'}}
      {{> Input label='Имя' name='first_name'}}
      {{> Input label='Фамилия' name='second_name'}}
      {{> Input label='Телефон' name='phone'}}
      {{> Input label='Пароль' name='password'}}
      {{> Input label='Пароль (еще раз)' name='password_check'}}
    </div>
    <div>
      {{> Button text='Зарегистрироваться' type="submit"}}
      {{> Link href="#" class="registration-link" label="Войти"}}
    </div>
  </form>
</main>
